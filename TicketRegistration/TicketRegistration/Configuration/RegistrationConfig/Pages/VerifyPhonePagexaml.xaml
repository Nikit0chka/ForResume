<Page x:Class="TicketRegistration.VerifyPhonePagexaml"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TicketRegistration"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="450"
      Title="VerifyPhonePagexaml" Background="Black">

    <Grid>
        <Button x:Name="BackButt" HorizontalAlignment="Left" VerticalAlignment="Bottom" Content="Back" Style="{StaticResource ButtonStyle}" Click="BackButt_Click"/>
        <StackPanel HorizontalAlignment="Center" Orientation="Vertical" VerticalAlignment="Center" Margin="0 10 0 0">
            <TextBlock Margin="0 0 0 20" TextWrapping="Wrap" HorizontalAlignment="Center" Text="Enter here code from your email" TextAlignment="Center" Style="{StaticResource TextBlockStyle}" Height="28" Width="109"/>
            <TextBox x:Name="CodeTxtBx" Style="{StaticResource TextBoxStyle}" HorizontalAlignment="Center"/>
            <Button x:Name="VerifyButt" Margin="0 35 0 0" Content="Verify" VerticalAlignment="Bottom" HorizontalAlignment="Center" Style="{StaticResource ButtonStyle}" Click="VerifyButt_Click"/>
        </StackPanel>
    </Grid>
</Page>
